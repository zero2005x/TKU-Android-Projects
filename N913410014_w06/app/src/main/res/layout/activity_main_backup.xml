<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_below="@+id/res"
        android:scrollbars="horizontal|vertical">

        <LinearLayout
            android:id="@+id/LH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tr"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sv"
        android:text="@string/red" />

    <TextView
        android:id="@+id/tg"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sv"
        android:layout_toRightOf="@+id/tr"
        android:text="@string/green" />

    <TextView
        android:id="@+id/tb"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sv"
        android:layout_toRightOf="@+id/tg"
        android:text="@string/blue" />

    <Button
        android:id="@+id/b1"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sv"
        android:layout_toRightOf="@+id/tb"
        android:text="auto change" />

    <EditText
        android:id="@+id/ed_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b1"
        android:ems="3"
        android:inputType="numberDecimal"
        android:text="0" />

    <EditText
        android:id="@+id/ed_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b1"
        android:layout_toRightOf="@+id/ed_r"
        android:ems="3"
        android:inputType="numberDecimal"
        android:text="0" />

    <EditText
        android:id="@+id/ed_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b1"
        android:layout_toRightOf="@+id/ed_g"
        android:ems="3"
        android:inputType="numberDecimal"
        android:text="0" />

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b1"
        android:layout_toRightOf="@+id/ed_b"
        android:text="manual change" />

</RelativeLayout>